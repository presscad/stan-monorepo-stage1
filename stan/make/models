##
# Models (to be passed through stanc)
##
MODEL_HEADER := src/stan/model/model_header.hpp

.PRECIOUS: %.cpp %.o
%$(EXE): %.o bin/libstan.a
	@echo ''
	@echo '--- Linking C++ model ---'
	$(LINK.c) $(OUTPUT_OPTION) $< $(LDLIBS)

.PRECIOUS: %.cpp
%.cpp : %.stan $(MODEL_HEADER)$(PCH) bin/stanc$(EXE)
	@echo ''
	@echo '--- Translating Stan graphical model to C++ code ---'
	bin/stanc$(EXE) $< --o=$@

.PRECIOUS: models/speed/%.stan
models/speed/%.stan : src/models/speed/%.stan
	@mkdir -p $(dir $@)
	@echo ''
	@echo '--- Copying model ---'
	cp $< $@ 
	@if test -f $(basename $<)*.R; then \
		echo '';\
		echo '--- Copying generate script ---';\
		cp $(wildcard $(basename $<)*.R) $(dir $@);\
		echo 'cp $(wildcard $(basename $<)*.R) $(dir $@)';\
	fi;
	@if test -f $(basename $<)*.Rdata; then \
		echo '';\
		echo '--- Copying data ---';\
		cp $(wildcard $(basename $<)*.Rdata) $(dir $@);\
		echo 'cp $(wildcard $(basename $<)*.Rdata) $(dir $@)';\
	fi;

.PRECIOUS: models/%.stan models/%.Rdata
models/%.stan : src/models/%.stan
	@mkdir -p $(dir $@)
	@echo ''
	@echo '--- Copying model ---'
	cp $< $@ 
	@if test -f $(patsubst src/models/%.stan,src/models/%.Rdata,$<); then \
		echo '';\
		echo '--- Copying data ---';\
		cp $(addsuffix .Rdata,$(basename $<)) $(addsuffix .Rdata,$(basename $@));\
		echo 'cp $(addsuffix .Rdata,$(basename $<)) $(addsuffix .Rdata,$(basename $@))';\
	fi;
	@if test -f $(patsubst src/models/%.stan,src/models/%_init.Rdata,$<); then \
		echo '';\
		echo '--- Copying init ---';\
		cp $(addsuffix _init.Rdata,$(basename $<)) $(addsuffix _init.Rdata,$(basename $@));\
		echo 'cp $(addsuffix _init.Rdata,$(basename $<)) $(addsuffix _init.Rdata,$(basename $@))';\
	fi;


#.PRECIOUS: %.cpp
#models/%$(EXE): models/%.o bin/libstan.a
#	@echo ''
#	@echo '--- Linking C++ model ---'
#	$(LINK.c) $(OUTPUT_OPTION) $< $(LDLIBS)


$(MODEL_HEADER).gch : $(MODEL_HEADER)
	@echo ''
	@echo '--- Precompiling $(MODEL_HEADER) for g++ ---'
	$(CC) $(CFLAGS) $(OUTPUT_OPTION) $<

$(MODEL_HEADER).pch : $(MODEL_HEADER)
	@echo ''
	@echo '--- Precompiling $(MODEL_HEADER) for clang++ ---'
	$(CC) $(CFLAGS) $(OUTPUT_OPTION) $<

$(MODEL_HEADER).d : $(MODEL_HEADER)
	@if test -d $(dir $@); \
	then \
	(set -e; \
	rm -f $@; \
	$(CC) $(CFLAGS) $(TARGET_ARCH) -MM $< > $@.$$$$; \
	sed -e 's,\($(notdir $*)\)\.o[ :]*,$(dir $@)\1.o $@ : ,g' < $@.$$$$ > $@; \
	rm -f $@.$$$$ ); \
	fi

##
# Will generate dependencies.
##
ifneq (,$(filter-out clean%,$(MAKECMDGOALS)))
  -include $(MODEL_HEADER).d
endif
