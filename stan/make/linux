##
# This file should modify the following variables
# as appropriate:
#   - CFLAGS
#   - CFLAGS_GTEST
#   - OPT
#   - EXE
##

ifeq (g++,$(CC_TYPE))
  CFLAGS += -std=gnu++0x
  CFLAGS += -g
  CFLAGS_GTEST += -g
  CFLAGS_GTEST += -DGTEST_HAS_PTHREAD=0
  PCH = .gch
endif
ifeq (clang++,$(CC_TYPE))
  CFLAGS += -Wc++0x-extensions
  CFLAGS += -Wunused-function
  CFLAGS += -g
  CFLAGS += -Wno-tautological-compare
  CFLAGS_GTEST += -lpthread
  #PCH = .pch
endif
