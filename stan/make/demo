demo/%$(EXE) : demo/%.o
	@mkdir -p $(dir $@)
	$(LINK.c) $(OUTPUT_OPTION) $<

demo/%.o : src/demo/%.cpp
	@mkdir -p $(dir $@)
	$(COMPILE.c) $(OUTPUT_OPTION) $<

##
# If the target is demo/, include .d. 
# Will generate dependencies.
##
ifneq (,$(filter demo/%,$(MAKECMDGOALS)))
  -include $(addsuffix .d,$(subst $(EXE),,$(filter demo/%,$(MAKECMDGOALS))))
endif
