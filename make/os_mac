##
# This file should modify the following variables
# as appropriate:
#   - CFLAGS
#   - CFLAGS_GTEST
#   - PCH
##

ifeq (g++,$(CC_TYPE))
  CFLAGS += -Wno-unused-function
  CFLAGS_GTEST += -std=c++0x
  VERSION := $(CC_MAJOR).$(CC_MINOR)
  ifeq (4.2,$(CC_MAJOR).$(CC_MINOR))
    PCH = 
  else
    PCH = .gch
  endif
endif
ifeq (clang++,$(CC_TYPE))
  CFLAGS += -Wno-unused-function
  CFLAGS += -Wno-tautological-compare
  CFLAGS_GTEST += -Wno-c++11-extensions
  #PCH = .pch
endif
